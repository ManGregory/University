@model University.Models.Group

@{
    ViewBag.Title = "Редагування групи";
}

<h2>Редагування</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Група</legend>

        @Html.HiddenFor(model => model.GroupId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Specialization)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Specialization)
            @Html.ValidationMessageFor(model => model.Specialization)
        </div>

        <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("До списку груп", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



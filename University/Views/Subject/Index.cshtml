@model IEnumerable<University.Models.Subject>

@{
    ViewBag.Title = "Список дисциплін";
}
<div style="float: right; margin: 0 1em 1em 0;"><img src="../Images/orderedList3.png"></div>
<p>
<h2>Дисципліни</h2>

<p>
    @Html.ActionLink("Додати нову", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.SubjectId }) |
            @Html.ActionLink("Переглянути", "Details", new { id=item.SubjectId }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.SubjectId })
        </td>
    </tr>
}

</table>


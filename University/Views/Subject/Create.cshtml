@model University.Models.Subject

@{
    ViewBag.Title = "Створення нової дисципліни";
}

<h2>Створення нової дисципліни</h2>

<div style="float: right; margin: 0 1em 1em 0;"><img src="../Images/orderedList5.png"></div><br><br>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("TeacherId", ViewBag.Teachers as SelectList, String.Empty)
            @Html.ValidationMessageFor(model => model.Name)
        </div>        

        <p>
            <input type="submit" value="Створити" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("До списку дисциплін", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

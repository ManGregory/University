@model University.Models.Subject

@{
    ViewBag.Title = "Редагування дисципліни";
}

<h2>Редагування дисципліни</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Дисципліна</legend>

        @Html.HiddenFor(model => model.SubjectId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("TeacherId", ViewBag.Teachers as SelectList, String.Empty)
            @Html.ValidationMessageFor(model => model.TeacherId)
        </div>          

        <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("До списку дисциплін", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


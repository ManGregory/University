<!DOCTYPE html>
<html lang="ru">
    <head>
        </br></br>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Облік успішності студентів</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Облік успішності студентів", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Домашня сторінка", "Index", "Home")</li>
                            <li>@Html.ActionLink("Оцінки", "Index", "Journal")</li>       
                            @if (User.Identity.Name == "admin")
                            {
                                <li>@Html.ActionLink("Дисципліни", "Index", "Subject")</li>
                            }
                            @if (User.Identity.Name == "admin")
                            {
                                <li>@Html.ActionLink("Викладачі", "Index", "Teacher")</li>
                            }
                            @if (User.Identity.Name == "admin")
                            {
                                <li>@Html.ActionLink("Студенти", "Index", "Student")</li>
                            }
                            @if (User.Identity.Name == "admin")
                            {
                                <li>@Html.ActionLink("Групи", "Index", "Group")</li>
                            }
                            @if ((User.Identity.Name == "admin") || (User.Identity.Name == "teacher"))
                            {
                                <li>@Html.ActionLink("Види контролю", "Index", "ControlType")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            
            
            

            <div class="content-wrapper">  
                
                 
              
                    <div class="float-left">  
                    <p>&copy; @DateTime.Now.Year - Розробник проекту: </p>
                     <p>КИЇВ</p>
                        
                    
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>




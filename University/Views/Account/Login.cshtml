@model University.Models.LoginModel

@{
    ViewBag.Title = "Увійти на сайт";
}


<div style="float: left; margin: 0 1em 1em 0;"><img src="../Images/orderedList3.png"></div>


<hgroup class="title">
    <h2>@ViewBag.Title</h2>
</hgroup>

<section>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Форма авторізації</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Увійти на сайт" />
    </fieldset>
}</br>
    </br>
    </br>
    </br>
    
    
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
  